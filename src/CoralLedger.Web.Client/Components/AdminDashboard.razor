        align-items: center;
        gap: 0.65rem;
        padding: 0.85rem 1rem;
        border-radius: 10px;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid var(--color-border);
        font-size: 0.9rem;
        color: var(--color-text);
    }

