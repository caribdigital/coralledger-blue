@inherits LayoutComponentBase

@using CoralLedger.Web.Client.Components
@using CoralLedger.Web.Theme

@inject CoralLedgerTheme Theme

<HeadContent>
    <style>
        :root {
@foreach (var variable in Theme.Variables)
        {
            @($"{variable.Key}: {variable.Value};")
        }
        }
    </style>
</HeadContent>

<CoralLedger.Web.Client.Components.OfflineIndicator />

<a class="skip-link" href="#main-content">Skip to main content</a>

<div class="page">
    <div class="sidebar desktop-nav">
        <NavMenu />
    </div>

    <main id="main-content" class="main-content">
        <div class="top-row px-4 d-none d-md-flex align-items-center justify-content-between">
            <div class="d-flex gap-2 align-items-center">
                <ConnectionStatus PendingCount="@_pendingActions" IsSyncing="@_isSyncing" OnManualSync="HandleManualSyncAsync" />
            </div>
            <div class="d-flex gap-3">
                <a href="/admin">Admin</a>
                <a href="https://github.com/caribdigital/coralledgerblue" target="_blank">GitHub</a>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<CoralLedger.Web.Client.Components.MobileNavigation />

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">ðŸ—™</a>
</div>

<script src="js/mobile.js"></script>

@code {
    private int _pendingActions = 2;
    private bool _isSyncing;

    private async Task HandleManualSyncAsync()
    {
        if (_isSyncing)
        {
            return;
        }

        _isSyncing = true;
        StateHasChanged();

        await Task.Delay(700);
        _pendingActions = Math.Max(0, _pendingActions - 1);

        _isSyncing = false;
        StateHasChanged();
    }
}
